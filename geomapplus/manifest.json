{
	"manifest_version": 2.0,
	"id": "geomapplus",
	"type": "widget",
	"name": "GeomapPlus",
	"namespace": "GeomapPlus",
	"version": "1.0.0",
	"author": "Reginaldo Costa",
	"description": "Displays host groups as configurable markers on a geographical map with enhanced alert management.",
	"url": "https://www.zabbix.com",
	"widget": {
		"js_class": "CWidgetGeoMapPlus",
		"size": {
			"width": {
				"min": 4,
				"max": 36,
				"default": 6
			},
			"height": {
				"min": 4,
				"max": 32,
				"default": 4
			}
		},
		"in": {
			"hostids": {
				"type": "_hostids"
			},
			"groupids": {
				"type": "_hostgroupids"
			}
		},
		"out": [
			{
				"type": "_hostid"
			},
			{
				"type": "_hostids"
			}
		]
	},
	"actions": {
		"widget.geomapplus.view": {
			"class": "WidgetView"
		}
	},
	"assets": {
		"js": [
			"class.widget.js"
		]
	}
}

